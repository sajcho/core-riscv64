# Description:	An sh-compatible command language interpreter
# URL:		http://cnswww.cns.cwru.edu/~chet/bash/bashtop.html
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	readline

name=bash
version=5.2.15
release=1
source=(http://ftpmirror.gnu.org/gnu/${name}/${name}-${version}.tar.gz \
	profile)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--exec-prefix= \
		--enable-readline \
		--disable-nls \
		--with-curses \
		--with-installed-readline \
		--without-bash-malloc \
		--build=$CHOST \
		--host=$CHOST

	make -j1 V=1

	install -D -m 0755 bash $PKG/bin/bash
	install -D -m 0644 doc/bash.1 $PKG/usr/share/man/man1/bash.1
	install -D -m 0644 $SRC/profile $PKG/etc/profile
}
