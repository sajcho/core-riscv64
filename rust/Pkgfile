# Description:	The Rust language with Cargo included.
# URL:		http://www.rust-lang.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	llvm-toolchain

name=rust
_realname=rustc
version=1.73.0-beta.7
_nameversion=beta
realversion="rustc 1.73.0-beta.7 (7c76587ed 2023-09-22)"
release=1

source=(https://static.rust-lang.org/dist/${_realname}-${_nameversion}-src.tar.xz \
	0001-dist.rs-change-dir-libexec-to-lib.patch \
	0002-tool.rs-change-dir-libexec-to-lib.patch)

build() {
	cd ${_realname}-${_nameversion}-src

	export CC="gcc"
	export CXX="g++"
	export CFLAGS="${CFLAGS/ -flto=auto -ffat-lto-objects/}"
	export CXXFLAGS="${CXXFLAGS/ -flto=auto -ffat-lto-objects/}"

	# use /usr/lib instead of /usr/libexec
	patch -p1 -i $SRC/0001-dist.rs-change-dir-libexec-to-lib.patch
	patch -p1 -i $SRC/0002-tool.rs-change-dir-libexec-to-lib.patch

	# Remove bundled dependencies.
	#rm -rf src/llvm-project/*
	#install -d src/llvm-project/libunwind

cat <<- EOF > $SRC/config.toml
	changelog-seen = 2
	profile = "user"

	[llvm]
	ninja = true
	link-shared = true
	static-libstdcpp = false

	[install]
	prefix = "/usr"

	[rust]
	channel = "beta"
	codegen-units-std = 1
	debuginfo-level-std = 2
	rpath = false
	codegen-tests = false
	description = "SAUX-RISCV64"

	[build]
	build = "riscv64gc-unknown-linux-gnu"
	host = ["riscv64gc-unknown-linux-gnu"]
	target = ["riscv64gc-unknown-linux-gnu"]
	verbose = 0
	locked-deps = true
	extended = true
	vendor = true
	docs = false
	profiler = false
	sanitizers = true
	python = "/usr/bin/python3"
	cargo = "/usr/bin/cargo"
	rustc = "/usr/bin/rustc"
	tools = ["analysis",
		"cargo",
		"clippy",
		"rustfmt",
		"rust-analyzer",
		"rust-analyzer-proc-macro-srv",
		"rustdoc",
		"rust-demangler",
		"src"]

	[target.riscv64gc-unknown-linux-gnu]
	cc = "/usr/bin/riscv64-unknown-linux-gnu-cc"
	cxx = "/usr/bin/riscv64-unknown-linux-gnu-c++"
	ar = "/usr/bin/riscv64-unknown-linux-gnu-ar"
	ranlib = "/usr/bin/riscv64-unknown-linux-gnu-ranlib"
	linker = "/usr/bin/riscv64-unknown-linux-gnu-cc"
	llvm-config = "/usr/bin/llvm-config"
	llvm-filecheck = "/usr/bin/FileCheck"
EOF

	cat $SRC/config.toml

	mkdir "$PKGMK_SOURCE_DIR/rust" || true
	export CARGO_HOME="$PKGMK_SOURCE_DIR/rust"
	export RUST_BACKTRACE="1"

	# prevent - if libgit2, libssh2 is installed
	export LIBGIT2_NO_PKG_CONFIG=1
	export LIBSSH2_NO_PKG_CONFIG=1

	/usr/bin/python3 ./x.py build --config="${SRC}"/config.toml ${JOBS:+-j ${JOBS}}

	DESTDIR=$PKG /usr/bin/python3 ./x.py --config="${SRC}"/config.toml install

	# Cleanup
	rm -r $PKG/usr/share/doc
	rm -r $PKG/usr/share/zsh
	rm $PKG/usr/lib/rustlib/{components,install.log,manifest-*,rust-installer-version,uninstall.sh}
	rm $PKG/usr/lib/{libstd-*,libtest-*}

	ln -srft $PKG/usr/lib $PKG/usr/lib/rustlib/riscv64gc-unknown-linux-gnu/lib/*.so

	find $PKG -type f -name 'README.md' -delete
}
