# Description:	Text-based web browser.
# URL:		http://lynx.isc.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	openssl3 zlib

name=lynx
version=2.9.0dev.10
release=2
source=(https://invisible-mirror.net/archives/${name}/tarballs/${name}${version}.tar.gz)

build() {
	cd ${name}${version}

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-8bit-toupper \
		--enable-externs \
		--enable-nsl-fork \
		--enable-cgi-links \
		--enable-exec-links \
		--enable-exec-scripts \
		--enable-persistent-cookies \
		--enable-gzip-help \
		--enable-prettysrc \
		--enable-source-cache \
		--enable-cjk \
		--enable-default-colors \
		--enable-nested-tables \
		--enable-japanese-utf8 \
		--enable-ipv6 \
		--enable-forms-options \
		--enable-justify-elts \
		--enable-partial \
		--enable-read-eta \
		--enable-scrollbar \
		--enable-progressbar \
		--enable-syslog \
		--enable-kbd-layout \
		--disable-idna \
		--disable-nls \
		--with-zlib \
		--with-bzlib \
		--with-screen=ncursesw \
		--with-ssl \
		--without-included-gettext

	make V=1

	make -j1 DESTDIR=$PKG install
}
